<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.0" xmlns="http://java.sun.com/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="http://java.sun.com/xml/ns/persistence
             http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd">

    <persistence-unit name="recording_persistence_unit">
        <class>com.marotech.recording.model.User</class>
        <class>com.marotech.recording.model.AppSession</class>
        <class>com.marotech.recording.model.Attachment</class>
        <class>com.marotech.recording.model.UserRole</class>
        <class>com.marotech.recording.model.AuthUser</class>
        <class>com.marotech.recording.model.Feature</class>
        <class>com.marotech.recording.model.JDBCDataSource</class>
        <class>com.marotech.recording.model.Notification</class>
        <class>com.marotech.recording.model.ResetInfo</class>
        <class>com.marotech.recording.model.Comment</class>
        <class>com.marotech.recording.model.Embedding</class>
        <class>com.marotech.recording.model.LanguageModel</class>
        <class>com.marotech.recording.model.Location</class>
        <class>com.marotech.recording.model.Account</class>
        <class>com.marotech.recording.model.AccountRecoveryInfo</class>
        <class>com.marotech.recording.model.Activity</class>
        <class>com.marotech.recording.model.Address</class>
        <class>com.marotech.recording.model.Passcode</class>
        <class>com.marotech.recording.model.Recording</class>
        <class>com.marotech.recording.model.SecurityQuestion</class>
        <class>com.marotech.recording.model.Device</class>
        <class>com.marotech.recording.model.DeviceDiscovery</class>
        <class>com.marotech.recording.model.Message</class>
        <class>com.marotech.recording.model.LocalDateAttributeConverter</class>

        <properties>
            <property name="hibernate.hbm2ddl.auto" value="update"/>
            <property name="hibernate.ejb.naming_strategy" value="org.hibernate.cfg.ImprovedNamingStrategy"/>
            <property name="hibernate.show_sql" value="false"/>
            <property name="hibernate.format_sql" value="true"/>
            <property name="hibernate.globally_quoted_identifiers" value="true"/>
            <property name="hibernate.connection.autoReconnect" value="true"/>
            <property name="hibernate.connection.autoReconnectForPools" value="true"/>
        </properties>
    </persistence-unit>
</persistence>
